<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/ps_bg_box"
        android:orientation="horizontal" >
		<ImageView
	    	android:id="@+id/im_bk_pic"
	        android:layout_width="36dp"
	        android:layout_height="36dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:src="@drawable/test_pic_people" />
		<LinearLayout
	    	android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="8dp"
	        android:layout_weight="1"
	        android:orientation="vertical" >
	        <LinearLayout
		    	android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="13dp"
		        android:orientation="horizontal" >
		        <TextView
		        	android:id="@+id/im_bk_name"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="@string/test_nickname"
		            android:layout_gravity="center"
		            android:textColor="#4d4d4d"
		            android:textSize="15sp" />
		        <ImageView
		            android:id="@+id/im_bk_ico1"
		            android:layout_marginLeft="4dp"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center"
				    android:src="@drawable/lm_badge_todays_petsitter_on" />
		        <ImageView
		            android:id="@+id/im_bk_ico2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:layout_marginLeft="4dp"
		            android:src="@drawable/lm_badge_video_on" />
				<ImageView
		            android:id="@+id/im_bk_ico3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:layout_marginLeft="4dp"
		            android:src="@drawable/lm_badge_visited_on" />
		    </LinearLayout>
			<LinearLayout
		    	android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="6dp"
		        android:gravity="center"
		        android:orientation="horizontal" >
		        <TextView
		            android:id="@+id/im_bk_description"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:singleLine="true"
		            android:text="@string/sample_str_money"
		            android:layout_gravity="center"
		            android:textColor="#7d7d7d"
		            android:textSize="14sp" />
		        <LinearLayout
		            android:layout_marginLeft="4dp"
		            android:layout_marginRight="4dp"
		            android:layout_width="1dp"
		            android:layout_height="match_parent"
		            android:layout_gravity="center"
		            android:background="#aeb1b3"/>

		        <TextView
		            android:id="@+id/im_bk_distance"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:singleLine="true"
		            android:layout_gravity="center"
		            android:text="@string/sample_str_distance"
		            android:textColor="#7d7d7d"
		            android:textSize="14sp" />

		    </LinearLayout>
			<LinearLayout
		    	android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="6dp"
		        android:layout_marginBottom="12dp"
		        android:gravity="center"
		        android:orientation="horizontal" >

		        <TextView
		            android:id="@+id/im_bk_review_score"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:text="@string/sample_review_score_detail"
		            android:textColor="#7d7d7d"
		            android:textSize="14sp" />

		        <TextView
		            android:id="@+id/im_bk_review_cnt"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center"
		            android:layout_marginLeft="4dp"
		            android:text="@string/sample_str_people"
		            android:textColor="#aeb1b3"
		            android:textSize="12sp" />

			</LinearLayout>
		</LinearLayout>
	    <LinearLayout
	    	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center">

	        <ImageView
	            android:id="@+id/im_bk_stat"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:src="@drawable/lm_btn_bookmark" />

	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="11dp"
	            android:layout_marginLeft="15dp"
	            android:layout_gravity="center"
	            android:src="@drawable/lm_btn_next" />

	    </LinearLayout>
        
    </LinearLayout>
</LinearLayout>
