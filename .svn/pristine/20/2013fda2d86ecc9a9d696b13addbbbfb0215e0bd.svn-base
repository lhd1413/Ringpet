<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:layout_gravity="center"
		    android:layout_marginTop="19dp"
		    android:layout_marginBottom="15dp">
			<ImageView
	            android:id="@+id/ac_rw_btn1"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/rv_img_review_off" />
			<ImageView
	            android:id="@+id/ac_rw_btn2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="9dp"
	            android:src="@drawable/rv_img_review_off" />
			<ImageView
	            android:id="@+id/ac_rw_btn3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="9dp"
	            android:src="@drawable/rv_img_review_off" />
			<ImageView
	            android:id="@+id/ac_rw_btn4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="9dp"
	            android:src="@drawable/rv_img_review_off" />
			<ImageView
	            android:id="@+id/ac_rw_btn5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="9dp"
	            android:src="@drawable/rv_img_review_off" />
		</LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ac_rw_click_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ps_bg_box"
        android:onClick="areaClick();">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/review_write_description"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="16dp"
            android:textColor="#aeb1b3"
            android:textSize="15sp" />
        
    </LinearLayout>
	
    <LinearLayout
        android:id="@+id/ac_rw_input_area"
        android:visibility="invisible"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#dbdbdb"/>
	    <LinearLayout
	        android:layout_width="match_parent"
        	android:layout_height="48dp"
	        android:orientation="horizontal" >
	
	        <EditText
	            android:id="@+id/ac_rw_txt"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:layout_gravity="center"
	            android:layout_marginLeft="13dp"
	            android:background="#00000000"
	            android:ems="10" >
		
		        <requestFocus />
	    	</EditText>
	
	        <ImageView
	            android:id="@+id/ac_rw_send"
	            android:layout_gravity="center"
	            android:layout_marginRight="13dp"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/ch_ic_check" />
	
	    </LinearLayout>
	</LinearLayout>
    

</LinearLayout>
