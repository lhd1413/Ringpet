<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:fillViewport="true"
	    >
    		<LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_marginTop="10dp"
			    android:focusable="true" 
	        	android:focusableInTouchMode="true"
	        	android:orientation="vertical"
	        	>
				<requestFocus></requestFocus>

				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:layout_marginLeft="10dp"
				    android:layout_marginRight="10dp"
				    android:background="@drawable/ps_bg_box"
				    android:layout_marginBottom="15dp"
				    android:orientation="vertical" >

				    <LinearLayout
				        android:layout_marginTop="18dp"
				        android:layout_width="56dp"
				        android:layout_height="56dp"
				        android:id="@+id/lv_profile"
				        android:layout_marginBottom="10dp"
				        android:background="@drawable/ellipse"
				        android:layout_gravity="center"
				        android:gravity="center">

						<ImageView
						    android:id="@+id/iv_profile"
						    android:layout_width="wrap_content"
						    android:layout_height="wrap_content"
						    android:src="@drawable/su_ic_profile" />
					</LinearLayout>

				    <TextView
				        android:id="@+id/textView1"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/sign_alert"
				        android:layout_gravity="center"
				        android:textColor="#aaaaaa"
				        android:textSize="14sp" />
				    <LinearLayout
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="15dp"
				        android:layout_marginLeft="38dp"
				        android:layout_marginRight="38dp"
				        android:orientation="horizontal">
				        <LinearLayout 
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:layout_weight="1"
				            android:gravity="center"
				            android:layout_gravity="center"
				            android:background="@drawable/dash_bg"/>
	
				        <ImageView
				            android:id="@+id/title_img"
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:layout_gravity="center"
				            android:layout_marginLeft="18dp"
				            android:layout_marginRight="18dp"
				            android:src="@drawable/su_img_profile" />
	
				        <LinearLayout 
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:layout_weight="1"
				            android:gravity="center"
				            android:layout_gravity="center"
				            android:background="@drawable/dash_bg"/>
				    </LinearLayout>
				    <LinearLayout
				        android:layout_marginTop="4dp"
				        android:layout_marginLeft="38dp"
				        android:layout_marginRight="38dp"
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:layout_weight="1"
				        android:orientation="vertical" >
				        <LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:layout_marginTop="15dp"
				            android:layout_marginBottom="15dp"
				            android:orientation="horizontal">
							
				            <TextView
				                android:layout_width="87dp"
				                android:layout_height="wrap_content"
				                android:text="@string/name"
				                android:textColor="#aaaaaa"
				                android:textSize="14sp" />

				            <EditText
				                android:id="@+id/iv_name"
				                android:enabled="false"
				                android:layout_width="wrap_content"
				        		android:background="#00000000"
				                android:singleLine="true"
				                android:layout_height="wrap_content"
				                android:layout_weight="1"
				                android:ems="10"
				                android:textColor="#4d4d4d"
				                android:textSize="15sp" />
				            
				        </LinearLayout>
				        <LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="1dp"
				            android:background="#e5e5e5"/>
				        <LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:layout_marginTop="15dp"
				            android:layout_marginBottom="15dp"
				            android:orientation="horizontal">
							
				            <TextView
				                android:layout_width="87dp"
				                android:layout_height="wrap_content"
				                android:text="@string/id"
				                android:textColor="#aaaaaa"
				                android:textSize="14sp" />

				            <TextView
				                android:id="@+id/iv_id"
				                android:enabled="false"
				                android:layout_width="wrap_content"
				        		android:layout_height="wrap_content"
				                android:layout_weight="1"
				                android:ems="10"
				                android:textColor="#4d4d4d"
				                android:textSize="15sp" />
				        </LinearLayout>
				        <LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="1dp"
				            android:background="#e5e5e5"/>
				        <LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:layout_marginTop="15dp"
				            android:layout_marginBottom="15dp"
				            android:orientation="horizontal">
							
				            <TextView
				                android:layout_width="87dp"
				                android:layout_height="wrap_content"
				                android:text="@string/pw"
				                android:textColor="#aaaaaa"
				                android:textSize="14sp" />

				            <EditText
				                android:id="@+id/iv_pw"
				                android:layout_width="wrap_content"
				        		android:background="#00000000"
				                android:layout_height="wrap_content"
				                android:layout_weight="1"
				                android:password="true"
				                android:singleLine="true"
				                android:ems="10"
				                android:textColor="#4d4d4d"
				                android:textSize="15sp" />
				        </LinearLayout>
				        <LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="1dp"
				            android:background="#e5e5e5"/>
				        <LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:layout_marginTop="15dp"
				            android:layout_marginBottom="15dp"
				            android:orientation="horizontal">
							
				            <TextView
				                android:layout_width="87dp"
				                android:layout_height="wrap_content"
				                android:text="@string/address"
				                android:textColor="#aaaaaa"
				                android:textSize="14sp" />

				            <EditText
				                android:id="@+id/iv_address"
				                android:layout_width="wrap_content"
				        		android:background="#00000000"
				                android:layout_height="wrap_content"
				                android:layout_weight="1"
				                android:singleLine="true"
				                android:ems="10"
				                android:textColor="#4d4d4d"
				                android:textSize="15sp" />
				            
				        </LinearLayout>
				        <LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="1dp"
				            android:background="#e5e5e5"/>
				        <LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="wrap_content"
				            android:layout_marginTop="15dp"
				            android:layout_marginBottom="15dp"
				            android:orientation="horizontal">
							
				            <TextView
				                android:layout_width="87dp"
				                android:layout_height="wrap_content"
				                android:text="@string/hp"
				                android:textColor="#aaaaaa"
				                android:textSize="14sp" />

				            <EditText
				                android:id="@+id/iv_mobile"
				                android:singleLine="true"
				                android:layout_width="wrap_content"
				        		android:background="#00000000"
				                android:layout_height="wrap_content"
				                android:layout_weight="1"
				                android:ems="10"
				                android:textColor="#4d4d4d"
				                android:textSize="15sp" />
				            
				        </LinearLayout>
				        <LinearLayout
				            android:layout_width="match_parent"
				            android:layout_height="1dp"
				            android:layout_marginBottom="15dp"
				            android:background="#e5e5e5"/>
				    </LinearLayout>
				    <LinearLayout
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center"
			            android:layout_marginBottom="17dp"
			            android:orientation="vertical" >

			            <ImageView
			                android:id="@+id/imageView2"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_gravity="center"
			                android:src="@drawable/sm_btn_save" />

			            <LinearLayout
				            android:layout_marginTop="4dp"
				            android:layout_width="fill_parent"
				            android:layout_height="2dp"
				            android:background="@drawable/app_background"/>
			        </LinearLayout>   

				</LinearLayout>

				<LinearLayout
				    android:id="@+id/save_btn_for_update"
				    android:layout_gravity="right"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginRight="19dp"
				    android:orientation="vertical" >
				    <ImageView
				        android:id="@+id/su_btn_save"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        
				        android:src="@drawable/su_btn_next" />
				    <LinearLayout
				        android:layout_marginTop="6dp"
				        android:background="@drawable/big_dash"
				        android:layout_width="match_parent"
				   	 	android:layout_height="wrap_content">
				        
				    </LinearLayout>
				</LinearLayout>
				
			</LinearLayout>
</ScrollView>
</LinearLayout>
